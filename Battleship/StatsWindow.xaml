<Window x:Class="Battleship.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="StatsWindow" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Win Percentage: " HorizontalAlignment="Left" Margin="38,33,0,0" VerticalAlignment="Top" Width="128"/>
        <Label x:Name="label1" Content="Ships sunk" HorizontalAlignment="Left" Margin="38,111,0,0" VerticalAlignment="Top" Width="86"/>
        <Label x:Name="label2" Content="Games Played" HorizontalAlignment="Left" Margin="38,59,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="label3" Content="Games Won" HorizontalAlignment="Left" Margin="38,85,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="button" Content="UpdateStats????" HorizontalAlignment="Left" Margin="38,220,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>

<Window x:Class="Battleship.BattleshipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="BattleshipWindow" Height="300" Width="300">
    <Grid>
        <Button x:Name="stats" Content="Stats" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="stats_Click"/>
        <Button x:Name="settings" Content="Settings" HorizontalAlignment="Left" Margin="207,10,0,0" VerticalAlignment="Top" Width="75" Click="settings_Click"/>
        <Button x:Name="users" Content="Users" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="75" Click="users_Click"/>
        <Button x:Name="loadGame" Content="Load Game" HorizontalAlignment="Left" Margin="207,239,0,0" VerticalAlignment="Top" Width="75" Click="loadGame_Click"/>
        <Button x:Name="play" Content="Play" HorizontalAlignment="Left" Margin="110,110,0,0" VerticalAlignment="Top" Width="75" Click="play_Click"/>

    </Grid>
</Window>
